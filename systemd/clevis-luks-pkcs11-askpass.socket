# clevis pkcs11 socket
[Unit]
Description=Clevis PKCS11 socket handler
Requires=clevis-luks-pkcs11-askpass.service sockets.target
After=systemd-ask-password-wall.service sockets.target
Before=cryptsetup-pre.target

[Socket]
ListenDatagram=/run/systemd/clevis-pkcs11.sock

[Install]
WantedBy=systemd-ask-password-wall.service
RequiredBy=cryptsetup-pre.target
